{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Application.Common.Behaviours.LoggingBehaviour": "Information",
      "Application.Common.Behaviours.PerformanceBehaviour": "Information",
      "API.Middleware.GlobalExceptionHandlingMiddleware": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=memora.db"
  },
  "JwtSettings": {
    "SecretKey": "MemoraSecretKeyForDevelopment123456789012345678901234567890",
    "ExpirationMinutes": 60
  },
  "Performance": {
    "InfoThresholdMs": 100,
    "WarningThresholdMs": 500,
    "CriticalThresholdMs": 2000
  },
  "FileUpload": {
    "MaxSizeBytes": 52428800,
    "MinSizeBytes": 100,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".mp4", ".mov", ".avi", ".wmv", ".webm"],
    "AllowedMimeTypes": [
      "image/jpeg", "image/png", "image/gif", "image/webp",
      "video/mp4", "video/quicktime", "video/mov", "video/x-msvideo", 
      "video/avi", "video/x-ms-wmv", "video/webm"
    ]
  },
  "Validation": {
    "BlockDisposableEmails": true,
    "RequireStrongPasswords": true,
    "MinPasswordLength": 8,
    "MaxPasswordLength": 128,
    "RequireSpecialCharacters": true,
    "BlockCommonPasswords": true,
    "PreventUserInfoInPassword": true
  }
}
