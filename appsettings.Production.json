{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Application.Common.Behaviours.LoggingBehaviour": "Warning",
      "Application.Common.Behaviours.PerformanceBehaviour": "Warning",
      "API.Middleware.GlobalExceptionHandlingMiddleware": "Error"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=memora_production.db"
  },
  "JwtSettings": {
    "SecretKey": "REPLACE_WITH_PRODUCTION_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG",
    "ExpirationMinutes": 30
  },
  "Performance": {
    "InfoThresholdMs": 50,
    "WarningThresholdMs": 200,
    "CriticalThresholdMs": 1000
  },
  "FileUpload": {
    "MaxSizeBytes": 20971520,
    "MinSizeBytes": 100,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".mp4", ".mov"],
    "AllowedMimeTypes": [
      "image/jpeg", "image/png", "image/gif", "image/webp",
      "video/mp4", "video/quicktime", "video/mov"
    ]
  },
  "Validation": {
    "BlockDisposableEmails": true,
    "RequireStrongPasswords": true,
    "MinPasswordLength": 10,
    "MaxPasswordLength": 128,
    "RequireSpecialCharacters": true,
    "BlockCommonPasswords": true,
    "PreventUserInfoInPassword": true
  }
}